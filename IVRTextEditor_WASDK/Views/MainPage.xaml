      Grid.Column="1"
      Width="32"
      Height="32"
      Style="{StaticResource PaintUIButtonStyle}"
      Click="Cut_Click">
                                    <Image x:Name="cutimg" Width="16"
         Height="16"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
         Source="/Assets/Cut.png" />
