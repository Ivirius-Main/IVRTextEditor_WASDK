                ToolTipService.Placement="Bottom"
                Grid.Row="2"
                Click="Settings_Click" Margin="0,0,8,0" HorizontalAlignment="Right">
                <Button.Content>
                    <AnimatedIcon x:Name="SearchAnimatedIcon" Height="16" Width="16">
                        <AnimatedIcon.Source>
                            <animatedvisuals:AnimatedSettingsVisualSource/>
                        </AnimatedIcon.Source>
                        <AnimatedIcon.FallbackIconSource>
                            <SymbolIconSource Symbol="Find"/>
                        </AnimatedIcon.FallbackIconSource>
                    </AnimatedIcon>
                </Button.Content>
            </Button>
        </Grid>

